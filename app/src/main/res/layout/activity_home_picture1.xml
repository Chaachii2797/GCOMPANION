<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageHolder"
        android:layout_width="326dp"
        android:layout_height="267dp"
        android:layout_gravity="center"
        app:srcCompat="@mipmap/bottle_piggy_bank"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="16dp"
        android:background="@drawable/frame_border"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/textView11"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="166dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:layout_weight="0.00"
        android:gravity="center"
        android:text="Php 100.00"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="109dp"
        tools:layout_editor_absoluteY="294dp"
        android:background="@drawable/frame_border"
        android:layout_below="@+id/imageHolder"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Charlyn Pepito"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="335dp"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Cebu City"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="149dp"
        tools:layout_editor_absoluteY="380dp"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/btOffer"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/shape"
        android:backgroundTint="@color/bg_screen2"
        android:text="Make Offer"
        android:textColor="@android:color/background_light"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        android:layout_marginBottom="18dp" />

    <Button
        android:id="@+id/btncotact"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/shape"
        android:backgroundTint="@color/bg_screen2"
        android:text="Contact Seller"
        android:textColor="@android:color/background_light"
        android:layout_alignBottom="@+id/btOffer"
        android:layout_toLeftOf="@+id/textView4"
        android:layout_toStartOf="@+id/textView4"
        android:layout_alignTop="@+id/btOffer" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:text="Bottle Piggy Bank"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:gravity="center"
        android:background="@color/bg_screen1"/>

</RelativeLayout>